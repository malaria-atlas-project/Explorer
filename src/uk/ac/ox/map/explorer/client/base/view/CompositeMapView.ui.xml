<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .filterPanel {
    	padding: 10px;
    	background-color: #CCCCCC;
    }
    
    .overflow {
    	overflow: auto;
    }
  </ui:style>
  <g:LayoutPanel>
    <g:layer top="0px" height="60%">
      <g:SimplePanel ui:field="mapPanel" styleName="{style.overflow}" />
    </g:layer>
    <g:layer bottom="0px" height="40%">
      <g:LayoutPanel>
        <g:layer left="0px" width="50%">
          <g:SimplePanel ui:field="keyPanel" />
        </g:layer>
        <g:layer right="0px" width="50%">
          <g:SimplePanel ui:field="mapInfoPanel" />
        </g:layer>
      </g:LayoutPanel>
    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>
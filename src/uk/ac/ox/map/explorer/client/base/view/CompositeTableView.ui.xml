<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <!-- Data browser -->
  <ui:with type="uk.ac.ox.map.explorer.client.resource.ResourceBundle" field="res"></ui:with>
  <g:LayoutPanel>
    <g:layer top="0px" height="60%">
      <g:SimplePanel ui:field="tablePanel" styleName="{res.panelCss.decoratedPanel}" />
    </g:layer>
    <g:layer bottom="0px" height="40%">
      <g:LayoutPanel>
        <g:layer left="0px" width="50%">
          <g:SimplePanel ui:field="filterPanel" styleName="{res.panelCss.decoratedPanel}" />
        </g:layer>
        <g:layer right="0px" width="50%">
          <g:SimplePanel ui:field="selectionPanel" styleName="{res.panelCss.decoratedPanel}" />
        </g:layer>
      </g:LayoutPanel>
    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style type="uk.ac.ox.map.explorer.client.base.view.BaseView.BaseStyle">
    .inlineHyperlink {
    	display: inline;
    }
    
    .spacer {
    	display: block;
    	width: 50px;
    }
    
    .fadeIn { /* fallback/image non-cover color */
    	background-color: #e4e4e4;
    	/* fallback image */
    	background-image: url(images/fallback-gradient.png);
    	/* Firefox 3.6+ */
    	background-image: -moz-linear-gradient(#ffffff, #e8e8e8);
    	/* Safari 4+, Chrome 1+ */
    	background-image: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#ffffff),
    		to(#e8e8e8) );
    	/* Safari 5.1+, Chrome 10+ */
    	background-image: -webkit-linear-gradient(#ffffff, #e8e8e8);
    	/* Opera 11.10+ */
    	background-image: -o-linear-gradient(#ffffff, #e8e8e8);
    }
  </ui:style>
  <ui:with field='res' type='uk.ac.ox.map.explorer.client.resource.ResourceBundle' />
  <g:LayoutPanel styleName="{style.fadeIn}">
    <g:layer top="0px" height="102">
      <g:FlowPanel>
        <g:HorizontalPanel>
          <g:SimplePanel styleName="{res.baseCss.header}">
          </g:SimplePanel>
            <g:FlowPanel styleName="{res.baseCss.perspective}">
              <g:Label>Change perspective</g:Label>
	            <g:ListBox ui:field="perspectiveSelect"></g:ListBox>
            </g:FlowPanel>
        </g:HorizontalPanel>
      </g:FlowPanel>
    </g:layer>
    <g:layer top="102" bottom="0px">
      <g:LayoutPanel>
        <g:layer left="0px" width="40%">
          <g:SimpleLayoutPanel ui:field="tablePanel" />
        </g:layer>
        <g:layer right="0px" width="60%">
          <g:SimpleLayoutPanel ui:field="mapPanel" />
        </g:layer>
      </g:LayoutPanel>

    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder> 